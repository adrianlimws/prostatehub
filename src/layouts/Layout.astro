---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      /* Reset and base styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }
      
      body {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      section {
        margin: 1rem 0;
        padding: 1.5rem;
        border: 1px solid #ddd;
        border-radius: 8px;
      }
      
      h1, h2, h3 {
        margin-bottom: 1rem;
      }
      
      p {
        line-height: 1.6;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>