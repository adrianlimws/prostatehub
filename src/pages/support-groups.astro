---
import BaseLayout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import supportGroupsData from '../data/support-groups-json.json';
---

<BaseLayout title="Prostate Hub - Support Groups">
  <Header />
  
  <main class="my-8">
    <!-- Header section remains the same -->
    <section class="text-center p-8 mb-8 border border-gray-200 rounded-lg">
      <h1 class="text-3xl font-bold mb-4">Prostate Cancer Support Groups</h1>
      <p class="text-lg max-w-3xl mx-auto">
        Find support groups throughout New Zealand to connect with others on similar journeys.
      </p>
    </section>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-8">
      {supportGroupsData.regions.map((region) => (
        <div class="border border-gray-200 rounded-lg p-6">
          <h2 class="text-xl font-bold mb-4">{region.name} Region</h2>
          
          {region.groups.map((group) => (
            <div class="mb-6">
              <h3 class="font-semibold text-lg">{group.location}</h3>
              <p class="mb-2"><strong>Coordinator:</strong> {group.coordinator}</p>
              <p class="mb-2"><strong>Contact:</strong> {group.phone} or 
                <a href={`mailto:${group.email}`} class="text-blue-600 hover:underline">
                  {group.email}
                </a>
              </p>
            </div>
          ))}
        </div>
      ))}
    </div>
    </div>
    
    <div class="flex justify-center">
      <a href="/" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 border border-gray-300 rounded-lg transition-colors">
        Return to Home
      </a>
    </div>
  </main>
  
  <Footer />
</BaseLayout>