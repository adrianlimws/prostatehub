<section class="welcome-section relative overflow-hidden text-center py-16 px-4 md:py-20 text-white shadow-xl">
  <div class="absolute inset-0 bg-blue"></div>
  
  <div class="absolute inset-0 overflow-hidden">
    <div class="lava-blob bg-teal-400 opacity-30"></div>
    <div class="lava-blob bg-red-400 opacity-30 animation-delay-3"></div>
    <div class="lava-blob bg-purple-400 opacity-30 animation-delay-5"></div>
    <div class="lava-blob bg-blue-400 opacity-30 animation-delay-7"></div>
    
    <div class="lava-blob small bg-red-600 opacity-60 animation-delay-2"></div>
    <div class="lava-blob small bg-teal-500 opacity-60 animation-delay-6"></div>
    <div class="lava-blob small bg-purple-500 opacity-50 animation-delay-8"></div>
    <div class="lava-blob small bg-green-500 opacity-55 animation-delay-4"></div>
  </div>
  
  <div class="container mx-auto relative z-10">
    <h1 class="text-5xl md:text-4xl lg:text-5xl font-bold mb-6 font-sans">Welcome to Prostate Hub</h1>
    <p class="text-xl md:text-xl max-w-3xl mx-auto leading-relaxed font-serif">
      A trusted resource to guide you through your prostate cancer journey
    </p>
    <p class="text-lg md:text-lg max-w-2xl mx-auto mt-4 opacity-85 font-serif">
      Evidence-based information organised by cancer stage to support patients and families in New Zealand
    </p>
  </div>
</section>

<style>
  .welcome-section {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-left-radius: 50% 60px;
    border-bottom-right-radius: 50% 60px;
    margin-bottom: 20px;
  }

  .lava-blob {
    will-change: transform, opacity;
    transform: translateZ(0);
    backface-visibility: hidden;
    perspective: 1000px;
    position: absolute;
    border-radius: 50%;
    filter: blur(15px);
    width: 400px;
    height: 400px;
    mix-blend-mode: screen;
    transform-origin: center center;
    opacity: 0.3;
    animation: float 12s ease-in-out infinite, rotate 15s linear infinite;
  }
  
  .lava-blob.small {
    width: 200px;
    height: 200px;
    animation-duration: 5s;
  }
  
  .lava-blob:nth-child(1) { top: -10%; left: 10%; }
  .lava-blob:nth-child(2) { top: 20%; right: -5%; }
  .lava-blob:nth-child(3) { bottom: -15%; left: 30%; }
  .lava-blob:nth-child(4) { bottom: 10%; right: 15%; }
  .lava-blob:nth-child(5) { top: 40%; left: 15%; }
  .lava-blob:nth-child(6) { top: 30%; right: 25%; }
  .lava-blob:nth-child(7) { bottom: 25%; left: 5%; }
  .lava-blob:nth-child(8) { bottom: 40%; right: 5%; }
  
  .animation-delay-2 { animation-delay: -2s; }
  .animation-delay-3 { animation-delay: -3s; }
  .animation-delay-4 { animation-delay: -4s; }
  .animation-delay-5 { animation-delay: -5s; }
  .animation-delay-6 { animation-delay: -6s; }
  .animation-delay-7 { animation-delay: -7s; }
  .animation-delay-8 { animation-delay: -8s; }
  
@keyframes float {
  0% {
    transform: translate(0%, 0%);
  }
  50% {
    transform: translate(10%, 5%);
  }
  100% {
    transform: translate(0%, 0%);
  }
}

@keyframes rotate {
  from { transform: rotate(0deg) scale(1); }
  to { transform: rotate(360deg) scale(1.1); }
}
</style>